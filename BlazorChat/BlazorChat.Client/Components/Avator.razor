@using Microsoft.AspNetCore.Components

<h3>Avator</h3>

<div class="avatar-grid">
    @foreach (var avatar in avatars)
    {
        <img src="@avatar" @onclick="() => SelectAvatar(avatar)" class="avatar @GetSelectedClass(avatar)" />
    }
</div>

@if (!string.IsNullOrEmpty(selectedAvatar))
{
    <h4>Selected Avatar:</h4>
    <img src="@selectedAvatar" class="selected-avatar" />
}

@code {
    private List<string> avatars = new()
    {
        "/avatars/1999.png",
        "/avatars/bakyura.svg",
        "/avatars/bakyura-2x.svg",
        // 添加更多头像路径
    };

    private string selectedAvatar;

    private void SelectAvatar(string avatar)
    {
        selectedAvatar = avatar;
    }

    private string GetSelectedClass(string avatar)
    {
        return avatar == selectedAvatar ? "selected" : string.Empty;
    }
}
